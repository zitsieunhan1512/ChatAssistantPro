<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="COMMON_PROGRESS_BAR" parent="android:style/Widget.DeviceDefault.ProgressBar"/>
    <style name="text_content_title">
        <item name="android:textSize">@dimen/dimen_15sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#F0E6DB</item>
        <item name="android:dividerHeight">3dp</item>
    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="WAC_BUTTON">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/dimen_0dp</item> <!--    Don't remove android:padding set, keep it to avoid text cut-off on the button    -->
        <item name="android:paddingStart">@dimen/dimen_16dp_w</item>
        <item name="android:paddingEnd">@dimen/dimen_16dp_w</item>
        <item name="android:paddingTop">@dimen/dimen_9dp_w</item>
        <item name="android:paddingBottom">@dimen/dimen_9dp_w</item>
        <item name="android:minWidth">@dimen/one_ui_button_min_width</item>
        <item name="android:minHeight">@dimen/dimen_36dp_h</item>
        <item name="android:background">@drawable/common_button_background_normal</item>
        <item name="android:foreground">@drawable/common_raised_button_bg</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#010101</item>
        <item name="android:ellipsize">end</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WAC_BUTTON_NORMAL" parent="WAC_BUTTON">
        <item name="android:background">@drawable/common_button_background_normal</item>
    </style>

    <style name="WAC_BUTTON_BLUE" parent="WAC_BUTTON">
        <item name="android:background">@drawable/common_button_background_blue</item>
    </style>

